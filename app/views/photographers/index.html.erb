<p id="notice"><%= notice %></p>

<h1>Listing Photographers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fburl</th>
      <th>Weburl</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photographers.each do |photographer| %>
      <tr>
        <td><%= photographer.name %></td>
        <td><%= photographer.fburl %></td>
        <td><%= photographer.weburl %></td>
        <td><%= photographer.about %></td>
        <td><%= image_tag photographer.image.url(:medium) %></td>
        <td><%= link_to 'Show', photographer %></td>
        <td><%= link_to 'Edit', edit_photographer_path(photographer) %></td>
        <td><%= link_to 'Destroy', photographer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

